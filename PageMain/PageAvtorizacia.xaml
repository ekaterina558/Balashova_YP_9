<Page x:Class="Balashova_YP_9.PageMain.PageAvtorizacia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Balashova_YP_9.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAvtorizacia">
    <Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введие логин" Style="{StaticResource Label}"/>
            <TextBox Text="" Style="{StaticResource TextBox}" x:Name="txbLogin" Height="34" Width="305"/>
            <Label Content="Введите пароль" Style="{StaticResource Label}"/>
            <PasswordBox Style="{StaticResource PasswordBox}" x:Name="psbPassword"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Регистрация" Style="{StaticResource ButtonY}" Click="Button_Click"/>
                <Button  x:Name="btnIn"  Content="Войти " Style="{StaticResource ButtonR}" Click="btnIn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
